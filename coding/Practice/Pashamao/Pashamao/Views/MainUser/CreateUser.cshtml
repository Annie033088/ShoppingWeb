@{ Layout = "~/Views/Shared/MainHomeLayout.cshtml"; }

<head>
    <link href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.all.min.js"></script>
</head>
<body>
    <main>
        <form method="post" action="/MainUser/SubmitCreateUser">
            <div asp-controller="action" class="container col-3 mx-auto">
                <div class="mb-3  ">
                    <label class="fs-6 control-form-label ">帳號</label>
                    <input type="text" name="CreateAcct" class="form-control" placeholder="Enter 8~20 words" pattern="^(?=.*[a-zA-Z])(?=.*\d)[a-zA-Z\d]{8,20}$" required />
                </div>
                <div class="mb-3 ">
                    <label class="fs-6 ">密碼</label>
                    <input type="password" name="CreatePwd" class="form-control" placeholder="Enter 8~20 words" pattern="^(?=.*[a-zA-Z])(?=.*\d)[a-zA-Z\d]{8,20}$" required />
                </div>
                <div class="mb-3 ">
                    <label class="fs-6 ">名稱</label>
                    <input type="text" name="CreateName" class="form-control" placeholder="Enter your name" pattern="^{,10}$" />
                </div>
                <div class="mb-3 ">
                    <label class="fs-6 ">角色</label>
                    <select id="dropDownRole" name="dropDownRole">
                    </select>
                </div>
                <div>
                    <button type="submit" class="btn btn-dark">確認</button>
                    <button type="button" class="btn btn-dark" onclick="window.location.href=`/MainUser/Index`">取消</button>
                </div>
            </div>
            <p>@ViewBag.Message</p>
        </form>

    </main>
    <script>
         var NameList = JSON.parse('@Html.Raw(ViewBag.JsonRolesName)');
         var selectElement = document.getElementById("dropDownRole");

        NameList.forEach(function (name) {
            if (name != "SuperAdmin") {

                var option = document.createElement("option");
                option.value = name;
                option.textContent = name;
                selectElement.appendChild(option);
            }
        });
    </script>
    <script src="~/js/CreateAndEditRole.js"></script>
</body>