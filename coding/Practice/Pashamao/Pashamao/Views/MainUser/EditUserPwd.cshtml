<body>
    <main>
        <form method="post" action="/MainUser/SubmitEditUserPwd">
            <div asp-controller="action" class="container col-3 mx-auto">
                <div class="mb-3  ">
                    <label class="fs-6 control-form-label ">請輸入舊密碼</label>
                    <input type="text" name="OldPwd" class="form-control" placeholder="Enter 8~20 words" pattern="^(?=.*[a-zA-Z])(?=.*\d)[a-zA-Z\d]{8,20}$" required />
                </div>
                <div class="mb-3 ">
                    <label class="fs-6 ">請輸入新密碼</label>
                    <input type="password" name="NewPwd" class="form-control" placeholder="Enter 8~20 words" pattern="^(?=.*[a-zA-Z])(?=.*\d)[a-zA-Z\d]{8,20}$" required />
                </div>
                <button type="submit" class="btn btn-dark d-grid">確認</button>
            </div>
            <p>@ViewData["Massage"]</p>
        </form>
    </main>
</body>
