<body>
    <main>
        <form method="post" action="/MainUser/SubmitEditUserPwd">
            <div asp-controller="action" class="container col-3 mx-auto">
                <div class="mb-3 ">
                    <label class="fs-6 ">請輸入舊密碼</label>
                    <input type="password" id="oldPwd" name="OldPwd" class="form-control" placeholder="Enter 8~20 words" pattern="^(?=.*[a-zA-Z])(?=.*\d)[a-zA-Z\d]{8,20}$" required />
                </div>
                <div class="mb-3 ">
                    <label class="fs-6 ">請輸入新密碼</label>
                    <input type="password" id="newPwd" name="NewPwd" class="form-control" placeholder="Enter 8~20 words" pattern="^(?=.*[a-zA-Z])(?=.*\d)[a-zA-Z\d]{8,20}$" required />
                </div>
                <div>
                    <button type="submit" class="btn btn-dark">確認</button>
                    <button type="button" class="btn btn-dark" onclick="window.location.href=`/MainUser/Index`">取消</button>
                </div>
            </div>
            <p class="text-danger justify-content-center">@ViewBag.Message</p>
        </form>
    </main>
</body>