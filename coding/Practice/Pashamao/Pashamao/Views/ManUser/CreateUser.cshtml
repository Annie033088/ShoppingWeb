@{ Layout = "~/Views/Shared/ManHomeLayout.cshtml"; }

<form method="post" action="/ManUser/CreateUser">
    <div asp-controller="action" class="container col-3 mx-auto">
        <div class="mb-3  ">
            <label class="fs-6 control-form-label ">帳號</label>
            <input type="text" name="CreateAcct" class="form-control" placeholder="Enter 8~20 words" pattern="^(?=.*[a-zA-Z])(?=.*\d)[a-zA-Z\d]{8,20}$" required />
        </div>
        <div class="mb-3 ">
            <label class="fs-6 ">密碼</label>
            <input type="password" name="CreatePwd" class="form-control" placeholder="Enter 8~20 words" pattern="^(?=.*[a-zA-Z])(?=.*\d)[a-zA-Z\d]{8,20}$" required />
        </div>
        <div class="mb-3 ">
            <label class="fs-6 ">名稱</label>
            <input type="text" name="CreateName" class="form-control" placeholder="Enter your name" pattern="^{,10}$" required />
        </div>
        <div class="mb-3 ">
            <label class="fs-6 ">角色</label>
            <select id="dropDownRole" name="dropDownRole">
                <option value="superAdmin">超級管理員</option>
                <option value="admin">平台管理員</option>
                <option value="waiter">服務員</option>
            </select>
        </div>
        <button type="submit" class="btn btn-dark d-grid">確認</button>
    </div>
</form>