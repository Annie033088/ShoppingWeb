
@{
    var controllerName = ViewContext.RouteData.Values["controller"].ToString();

    if (controllerName == "Login")
    {
        Layout = "Shared/LoginLayout.cshtml";  
    }
    else if (controllerName == "Error")
    {
        Layout = "Shared/LoginLayout.cshtml";
    }
    else
    {
        Layout = "Shared/MainHomeLayout.cshtml";
    }
}